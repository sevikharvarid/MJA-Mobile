<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp">

    <androidx.cardview.widget.CardView
        android:layout_marginVertical="5dp"
        android:layout_marginHorizontal="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        app:cardElevation="2dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:id="@+id/cvIconOrder"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginHorizontal="15dp"
                android:background="#FFCCCCCC"
                app:cardCornerRadius="50dp"
                app:layout_constraintBottom_toBottomOf="@id/vwStoreAddress"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/tvStoreTitle">

                <ImageView
                    android:id="@+id/ivIconOrder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.cardview.widget.CardView>


            <TextView
                android:id="@+id/tvStoreTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginHorizontal="15dp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/cvIconOrder"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="Toko 1" />

            <View
                android:id="@+id/vwStoreTitle"
                app:layout_constraintTop_toBottomOf="@id/tvStoreTitle"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="#FFCCCCCC"
                android:layout_marginTop="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginHorizontal="15dp"
                app:layout_constraintStart_toEndOf="@+id/cvIconOrder"
                />

            <TextView
                android:id="@+id/tvStoreName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:maxLines="1"
                android:textStyle="bold"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginHorizontal="15dp"
                app:layout_constraintStart_toEndOf="@+id/cvIconOrder"
                app:layout_constraintTop_toBottomOf="@id/tvStoreTitle"
                tools:text="Store Name" />

            <View
                android:id="@+id/vwStoreName"
                app:layout_constraintTop_toBottomOf="@id/tvStoreName"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="#FFCCCCCC"
                android:layout_marginTop="5dp"
                android:layout_marginHorizontal="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/cvIconOrder"
                />

            <TextView
                android:id="@+id/tvStoreAddress"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:maxLines="3"
                android:textStyle="bold"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginHorizontal="15dp"
                app:layout_constraintStart_toEndOf="@+id/cvIconOrder"
                app:layout_constraintTop_toBottomOf="@id/vwStoreName"
                tools:text="Store Name" />

            <View
                android:id="@+id/vwStoreAddress"
                app:layout_constraintTop_toBottomOf="@id/tvStoreAddress"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="#FFCCCCCC"
                android:layout_marginTop="5dp"
                android:layout_marginHorizontal="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/cvIconOrder"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>




</androidx.constraintlayout.widget.ConstraintLayout>